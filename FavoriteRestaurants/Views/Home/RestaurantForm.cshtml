@{
  Layout = "_Layout";
}

<h1>Best Restaurants</h1>

<h2>Add a Restaurant</h2>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
      <div class="form">
        <form action="/cuisines/@Model.GetId()/@Model.GetName()-restaurants/new" method="post">
          <label for="restaurant-name">Restaurant name:</label>
          <br>
          <input type="text" name="restaurant-name" id="restaurant-name">
          <br>
          <label for="location">Location:</label>
          <br>
          <input type="text" name="location" id="location">
          <br>
          <label for="hours">Hours:</label>
          <br>
          <input type="text" name="hours" id="hours">
          <br>
          <button type="submit">Add it!</button>
        </form>
      </div>
    </div>
  </div>
</div>


<p class="buttons"><button><a href="/cuisines/@Model.GetId()/@Model.GetName()-restaurants">Back to @Model.GetName() restaurants</a></button></p>
<p class="buttons"><button><a href="/">Home</a></button></p>
